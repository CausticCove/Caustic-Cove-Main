//Make sure we aren't doing the same as the mother.
/mob/living/simple_animal/hostile/retaliate/rogue/flesh_mother/beast_mother_bab/death(gibbed)
	. = ..()

/mob/living/simple_animal/hostile/retaliate/rogue/flesh_mother/beast_mother_bab/Initialize()
	for(var/mob/living/simple_animal/D in range(2, get_turf(src)))
		if(istype(D, /mob/living/simple_animal/hostile/retaliate/rogue/flesh_mother) && prob(77))
			if(D.stat == DEAD)
				cry_sequence()


/mob/living/simple_animal/hostile/retaliate/rogue/beast_mother_bab/proc/cry_sequence()
	icon_state = icon_crying
	src.emote("cry")
	spawn(60)
		if(src.stat == CONSCIOUS)
			icon_state = icon_living
			src.emote("growl")
			visible_message("Angry chirps can be heard!")
		else
			return




/mob/living/simple_animal/hostile/retaliate/rogue/flesh_mother/death(gibbed)
	for(var/i in 1 to rand(1,6))
		spawn(rand(20, 120))
			new /mob/living/simple_animal/hostile/retaliate/rogue/beast_mother_bab(src.loc)
	. = ..()
	

